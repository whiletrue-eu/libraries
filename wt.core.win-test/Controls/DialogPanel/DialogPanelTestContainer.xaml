<UserControl x:Class="WhileTrue.Controls.DialogPanelTestContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wt="clr-namespace:WhileTrue.Controls;assembly=wt.core.win"
             xmlns:controls="clr-namespace:WhileTrue.Controls"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600" Padding="10"
             d:DataContext="{d:DesignInstance Type={x:Type controls:DialogPanelTestContainerValues},IsDesignTimeCreatable=True}">
