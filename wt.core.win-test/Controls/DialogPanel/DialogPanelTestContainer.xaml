        <StackPanel.Resources>
            <Style TargetType="{x:Type wt:DialogPanel}">
                <Setter Property="CaptionTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Margin="0,3,0,0" />
